<h3>Hello <%= current_user.email %>!</h3>
<br>
<div>
<% if current_user.vehicles.empty? %>
   <p><%= "You don't have any vehicles yet!" %></p>
   <p><%= "Click the button below to add your first vehicle." %></p>
<% else %>
   <% current_user.vehicles.each do |vehicle| %>
      <h4><a href="/vehicles/<%= vehicle.slug %>"><%= "#{vehicle.full_name}" + " @ #{vehicle.mileage} miles" %></a></h4>
      <% if vehicle.entries.empty? %>
         <p><%= "Currently, you do not have any entries for this vehicle." %></p>
      <% else %>
         <% vehicle.entries.each do |entry| %>
            <ul>
               <li><a href="/entries/<%= entry.id %>"><%= entry.entry_type %></a></li>
            </ul>
         <% end %>
      <% end %>
   <br>
   <% end %>
<% end %>
</div>
<br>
<p><a href="/vehicles/new"><input type="button" value="Add Vehicle"></a></p>

<p><a href="/logout"><input type=button value="Logout"></a></p>

<p><a href="/<%= current_user.email %>/edit"><input type=button value="Edit Your Account"></a></p>