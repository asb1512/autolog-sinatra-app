<p><a href="/<%= current_user.email %>">Account</a></p>

<h3>New Maintenance Entry<h3>

<form action="/entries" method="POST">
   <p>
      <label>Maintenance Type:</label>
         <input type="text" name="entry_type" placeholder="e.g. Engine tuneup">
   </p>
   <p>
      <label>Description:</label>
         <input type="text" name="entry_content" placeholder="spark plugs replaced">
   </p>
   <p>
      <label>Due Date:</label>
         <input type="date" name="due_date">
   </p>
   <p>
      <label>Choose a vehicle for this task:</label>
      <% current_user.vehicles.each do |vehicle| %>
         <p><input type="radio" name="vehicles[]" value="<%= vehicle.id %>" <%= 'checked' if current_user.vehicles.length == 1 %> > <%= vehicle.full_name %></p>
      <% end %>
   </p>
   <input type="submit" value="Create Entry">
</form>